{
    "name": "{{BPREPLACEGITHUB}}/{{BPREPLACESLUG}}",
    "description": "{{BPREPLACEDESCRIPTION}}",
    "type": "wordpress-plugin",
    "license": "MIT",
    "scripts": {
        "test": "phpunit --testdox --no-coverage",
        "coverage": "XDEBUG_MODE=coverage phpunit --testdox",
        "build": "vendor/bin/build",
        "php:lint": "phpcs",
        "php:fix": "phpbf",
        "php:lint:changed": "phpcs-changed",
        "php:fix:changed": "phpcbf-changed"
    },
    "authors": [
        {
            "name": "{{BPREPLACEAUTHOR}}",
            "email": "{{BPREPLACEAUTHOREMAIL}}"
        }
    ],
    "autoload": {
        "psr-4": {"{{BPREPLACENAMESPACE}}\\": "source/php/"}
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "10up/wp_mock": "^0.5.0",
        "lucatume/function-mocker": "^1.3",
        "helsingborg-stad/phpcs": "^0.3.5",
        "helsingborg-stad/wp-build-php": "^0.5.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
