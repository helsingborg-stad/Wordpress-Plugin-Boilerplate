{
    "name": "{{BPREPLACEGITHUB}}/{{BPREPLACESLUG}}",
    "description": "{{BPREPLACEDESCRIPTION}}",
    "type": "wordpress-plugin",
    "license": "MIT",
    "scripts": {
        "test": "phpunit --no-coverage --testdox",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --testdox",
        "mago:lint": "vendor/carthage-software/mago/composer/bin/mago lint --fix --format",
        "mago:format": "vendor/carthage-software/mago/composer/bin/mago fmt"
    },
    "authors": [
        {
            "name": "{{BPREPLACEAUTHOR}}",
            "email": "{{BPREPLACEAUTHOREMAIL}}"
        }
    ],
    "autoload": {
        "psr-4": {
            "{{BPREPLACENAMESPACE}}\\": "source/php/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "helsingborg-stad/wpservice": "^2.0",
        "helsingborg-stad/acfservice": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "carthage-software/mago": "^0.26.1"
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}